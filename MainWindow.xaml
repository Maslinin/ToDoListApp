<!-- XAML верстка окна приложения-->
    <Window x:Class="ToDoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Список дел" Height="600" Width="1030" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="NotePad.ico" Topmost="True">
        
    <Grid>
        <DataGrid x:Name="DgToDoList" FontSize="15"  FontWeight="Bold" Margin="10" AutoGenerateColumns="False" SelectionChanged="DgToDoList_SelectionChanged_1">
            <DataGrid.Columns>
                
                <!-- Binding="{Binding Path = Указывает путь к свойству-->
                <!--Колонка 1:-->
                <DataGridTextColumn Binding="{Binding Path = CreationDate}" IsReadOnly="True" Header="Дата создания:" Width="125"/>
                <!--Колонка 2:-->
                <DataGridCheckBoxColumn Binding="{Binding Path = IsDone, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Header="Статус:" Width="65"/>
                <!--Колонка 3:-->
                <DataGridTextColumn Binding="{Binding Path = Text}" IsReadOnly="False" Header="Выполнить:" Width="*"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>